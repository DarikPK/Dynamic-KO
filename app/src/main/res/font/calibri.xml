<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Estilo Normal -->
    <font
        app:fontStyle="normal"
        app:fontWeight="400"
        app:font="@font/calibri_regular" />

    <!-- Estilo Cursiva -->
    <font
        app:fontStyle="italic"
        app:fontWeight="400"
        app:font="@font/calibri_italic" />

    <!-- Estilo Negrita -->
    <font
        app:fontStyle="normal"
        app:fontWeight="700"
        app:font="@font/calibri_bold" />

    <!-- Estilo Negrita y Cursiva -->
    <font
        app:fontStyle="italic"
        app:fontWeight="700"
        app:font="@font/calibri_bold_italic" />

</font-family>